<head>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
  <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
 
</head>

<body>
<div class="navbar navbar-expand-lg-md-sm " style="background-color:#23282e;">
 
    <h1 style="color:#bd000d;">FitRecps  </h1>
    <button type="button" class="btn btn-outline-danger float-right"><%= render "devise/shared/links3" %></button> 

</div>
  <div class="container">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5 text-white" style="background-color:rgba(51, 51, 51, 0.4);border-color:#bd000d;">
          <div class="card-body" style="text-align:center;">
            <h2>Registrazione</h2>

            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>

              <div class="row">
                <div class="col">
                  <%= f.label :nome, size: 10 %><br />
                  <%= f.text_field :nome, autofocus: true, autocomplete: "nome" %>
                </div>

                <div class="col">
                  <%= f.label :cognome, size: '10' %><br />
                  <%= f.text_field :cognome, autofocus: true, autocomplete: "cognome" %>
                </div>
              </div>

              <div class="field">
                <%= f.label :data_Di_Nascita %><br />
                <%= f.date_select :dataNascita, order: [:day, :month, :year], prompt: { day: 'Giorno', month: 'Mese', year: 'Anno' }, start_year: Date.today.year, end_year: Date.today.year - 100 %>
              </div>
              
              
                <div class="col">
                  <%= f.label :luogo_Di_Nascita %><br />
                  <%= f.text_field :luogoNascita, autofocus: true, autocomplete: "luogoNascita" %>
                </div>

                <div class="col">
                  <%= f.label :sesso %><br />
                  <%= f.select :sesso, ["Maschio","Femmina"]%>
                </div>
              

              <div class="field">
                <%= f.label :email %><br />
                <%= f.email_field :email, autofocus: true, autocomplete: "email",id:"email" %>
              </div>

              
            
              <div class="col">
                <%= f.label :password %>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "new-password",id:"password" %>
              </div>

              <div class="col">
                <%= f.label :password_confirmation %><br />
                <%= f.password_field :password_confirmation, autocomplete: "new-password",id:"password_confirmation" %>
              </div>
            

              <div class="actions">
                <%= f.submit "Entra in FitRecps!" %>
              </div>
            <% end %>

            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>

<style>
  body{
    background-image: url(<%= asset_path 'sfondo.jpg' %>);
    background-size:cover;
    background-attachment: scroll;
  }


</style>