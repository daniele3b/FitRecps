<head>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
  <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
</head>

<body>
<div class="navbar navbar-expand-lg-md-sm " style="background-color:#23282e;">
 
    <h1 style="color:#bd000d;">FitRecps  </h1>
    <button type="button" class="btn btn-outline-danger float-right"><%= render "devise/shared/links2" %></button> 

</div>
  <div class="container">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5 text-white" style="background-color:rgba(51, 51, 51, 0.4);border-color:#bd000d;">
          <div class="card-body" style="text-align:center;">
            <h2>Recupero Password</h2>
            <hr>
            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <%= f.hidden_field :reset_password_token %>

            <div class="field">
              <%= f.label :password, "New password" %>
              <% if @minimum_password_length %>
                (<%= @minimum_password_length %> characters minimum)<br />
              <% end %>
              <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
            </div>

            <div class="field">
              <%= f.label :password_confirmation, "Confirm new password" %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
            </div>

            <div class="actions"><br />
              <%= f.submit "Cambia Password" %>
            </div>
          <% end %>

            <%- if controller_name != 'sessions' %>
              <%= link_to "Torna al Login", new_session_path(resource_name) %><br />
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>


<style>
  body{
    background-image: url(<%= asset_path 'sfondo.jpg' %>);
    background-size:cover;
    background-attachment: scroll;
  }
</style>

