<html>
<head>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
  <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
</head>
<body style="background-color:#333;">
<div class="navbar navbar-expand-lg-md-sm " style="background-color:#23282e;">
 
    <h1 style="color:#bd000d;">FitRecps  </h1>
   
</div>
<div class="container">
    <div class="row">
    <span class="text-white"><%= link_to "< Torna alle ricette", recipes_path %></span>
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5 " style="border-color:#bd000d;">
          <div class="card-body" style="text-align:center;">
          <h2  >Scegli i filtri da applicare </h2>

          <hr>


        <div class="container">
        <%= form_with url: recipes_filter_nome_path ,model: @recipe,method: :get, local: true do |form| %>

            <div class="field">
                <%= form.label :nome %>
                <%= form.text_field :nome %>
            </div>

  <div class="actions">
    <%= form.submit 'Cerca'%>
  </div>
<% end %>
</div>


<!--  SEPARAZIONE TRA LE DUE FORM  -->

        <div class="container">
        <%= form_with url: recipes_filter_scelta_visualizza_path ,model: @recipe,method: :get, local: true do |form| %>

        <hr>
        
        <!--  TIPO  -->

        <div class="field">
            <%= form.label :tipo %>
            <%= form.select :tipo,  ['', 'Antipasto', 'Primo', 'Secondo', 'Contorno', 'Frutta', 'Dolce'] %>
        </div>

        <!--  MACRONUTRIENTI  -->

        <div class="field mt-1" style="margin-left:13px">
            <%= form.label :carboidrati_min %>
            <%= form.number_field :carboidrati_min %>
        </div>

        <div class="field mt-1" style="margin-left:13px">
            <%= form.label :carboidrati_max %>
            <%= form.number_field :carboidrati_max %>
        </div>

        <div class="field mt-1" style="margin-left:50px">
            <%= form.label :grassi_min %>
            <%= form.number_field :grassi_min %>
        </div>

        <div class="field mt-1" style="margin-left:50px">
            <%= form.label :grassi_max %>
            <%= form.number_field :grassi_max %>
        </div>

        <div class="field mt-1" style="margin-left:33px">
            <%= form.label :proteine_min %>
            <%= form.number_field :proteine_min %>
        </div>

        <div class="field mt-1" style="margin-left:33px">
            <%= form.label :proteine_max %>
            <%= form.number_field :proteine_max %>
        </div>


  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
</div>

          

          </div>
        </div>
      </div>
    </div>
  </div>

</body >

</html>
