<html>
<head>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
  <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
</head>
<body style="background-color:#333;">
<div class="navbar navbar-expand-lg-md-sm " style="background-color:#23282e;">
 
    <h1 style="color:#bd000d;">FitRecps  </h1>
   
</div>
<div class="container">
    <div class="row">
    <span class="text-white"><%= link_to "< Torna alle ricette", recipes_path %></span>
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5 " style="border-color:#bd000d;">
          <div class="card-body" style="text-align:center;">
          <h2  >Inserisci un rating alla ricetta </h2>

        <div class="container">
        <%= form_with url: "/ratings", method: "post" ,model: @rating, local: true do |form| %>
        <%= form.hidden_field :recipeid, :value => @recipeid %>
        <div class="row">
        <div class="col">
        <%= form.label :valore %>
        </div>
         <div class="col">
        <%= form.number_field :valore, {:placeholder => "Valore", :required => true, :max=>"5",:min=>"1",:id=>'valore' } %>
        </div>
        </div>

  <div class="actions">
    <%= form.submit 'Rate' %>
  </div>
<% end %>
</div>

          

          </div>
        </div>
      </div>
    </div>
  </div>

</body >

</html>